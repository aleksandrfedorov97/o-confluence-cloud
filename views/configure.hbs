<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="cache-control" content="no-cache" />
    <meta name="ap-local-base-url" content="{{localBaseUrl}}">
    <title>{{title}}</title>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script src="https://connect-cdn.atl-paas.net/all.js" type="text/javascript"></script>
    <link rel="stylesheet" href="//aui-cdn.atlassian.com/aui-adg/5.8.12/css/aui-experimental.css" media="all">
    <link rel="stylesheet" href="//aui-cdn.atlassian.com/aui-adg/5.8.12/css/aui.css" media="all">
    <script src="//aui-cdn.atlassian.com/aui-adg/5.8.12/js/aui.js" type="text/javascript"></script>
    <!--[if IE 9]><link rel="stylesheet" href="//aui-cdn.atlassian.com/aui-adg/5.8.12/css/aui-ie9.css" media="all"><![endif]-->
    <style>
        body {
            background: #fff;
        }

        legend {
            display: block !important;
            margin: 0 !important;
            width: auto !important;
            padding: 0 !important;
        }
    </style>
</head>
<body>
    <div id="admin-body">
        <div id="admin-body-content">
            <div id="aui-message-bar"></div>
            <form id="onlyoffice-config" name="configure" action="configure" method="POST" class="aui long-label">
                <input type="hidden" name="atl_token" value="{{token}}">
                <legend>
                    <div class="header">
                        <h2 id="serverSettings">Server settings</h2>
                    </div>
                </legend>
                <div class="field-group">
                    <label for="docApiUrl">Document Editing Service address</label>
                    <input type="text" name="docApiUrl" id="docApiUrl" value="{{docApiUrl}}" class="text" required>
                </div>
                <div class="field-group">
                    <label for="jwtSecret">Secret key</label>
                    <input type="text" name="jwtSecret" id="jwtSecret" value="{{jwtSecret}}" class="text" required>
                </div>
                <div class="field-group">
                    <label for="jwtHeader">JWT Header</label>
                    <input type="text" name="jwtHeader" id="jwtHeader" value="{{jwtHeader}}" class="text" required>
                </div>

                <div class="buttons-container">
                    <div class="buttons">
                        <input id="saveButton" class="submit aui-button " type="submit" name="saveButton" value="Save">
                    </div>
                </div>
            </form>
        </div>
    </div>
    <script type="text/javascript" language="javascript">
        $(document).ready(function() {
            var lastMsg;
            var saveButton = $("#saveButton");

            $("#onlyoffice-config").submit(function(e) {
                e.preventDefault();
                saveButton.attr("disabled", true);

                $.ajax({
                    url: "/configure",
                    type: "POST",
                    headers: {
                        Authorization: "JWT " + "{{token}}"
                    },
                    data: {
                        docApiUrl: $("#docApiUrl").val(),
                        jwtSecret: $("#jwtSecret").val(),
                        jwtHeader: $("#jwtHeader").val()
                    },
                    success: function (response) {
                        if (lastMsg) lastMsg.remove();
                        lastMsg = AJS.messages.success({
                                    body: "Successfully saved the configuration"
                                });
                        saveButton.attr("disabled", false);
                    },
                    error: function (response) {
                        if (lastMsg) lastMsg.remove();
                        lastMsg = AJS.messages.error({
                                    body: "Error saving configuration"
                                });
                        saveButton.attr("disabled", false);
                    }
                });
            });
        });
    </script>
</body>
</html>